# Simple Mesh Topology in NS2

set ns [new Simulator]

# Trace & NAM files
set tf [open out.tr w]
$ns trace-all $tf
set nf [open out.nam w]
$ns namtrace-all $nf

# Number of mesh nodes
set N 6

# Create nodes
for {set i 0} {$i < $N} {incr i} {
    set n($i) [$ns node]
}

# Full mesh linking
for {set i 0} {$i < $N} {incr i} {
    for {set j [expr $i+1]} {$j < $N} {incr j} {
        $ns duplex-link $n($i) $n($j) 1Mb 10ms DropTail
    }
}

# End simulation
$ns at 5.0 "finish"

proc finish {} {
    global ns tf nf
    $ns flush-trace
    close $tf
    close $nf
    exec nam out.nam &
    exit 0
}

$ns run



